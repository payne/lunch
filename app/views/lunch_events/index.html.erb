<p id="notice"><%= notice %></p>

<h1>Listing Lunch Events</h1>

<table border="2">
  <thead>
    <tr>
      <th>When</th>
      <th>Nick name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lunch_events.each do |lunch_event| %>
      <tr>
        <td><%= lunch_event.when %></td>
        <td><%= lunch_event.nick_name %></td>
        <td><%= link_to 'Show', lunch_event %></td>
        <td><%= link_to 'Edit', edit_lunch_event_path(lunch_event) %></td>
        <td><%= link_to 'Destroy', lunch_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

